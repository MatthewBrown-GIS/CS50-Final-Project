{
  "manifest_version": 2,
  "name": "Embers for Firefox",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/Embers-48.png",
    "96": "icons/Embers-96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["embers.js"]
    }
  ]
}
